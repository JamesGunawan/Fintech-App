<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up - FinTech</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>

  <h1 class="title"> Fin<span class="white">tech</span></h1>

  <div class="flipbox">
    <div class="flipbox_inner">
      <div class="flipbox_front">
        <div class="signup_form">
          <h2>Create an Account</h2>
          <!-- Sign Up Form -->
          <form id="signUpForm">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required />

            <label for="first_name">First name:</label>
            <input type="text" id="first_name" name="first_name" required />

            <label for="last_name">Last Name:</label>
            <input type="text" id="last_name" name="last_name" required />

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required />

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required />

            <button type="submit">Sign Up</button>
          </form>
          
          <div class="auth">
            <h5>Have an account? <span id="login_button">Login</span></h5>
          </div>
        </div>
        <!-- Error or Success Message -->
        <div id="message"></div>
      </div>
      
        <div class="flipbox_back">
          <div class="login_form">
            <h2>Login to Fintech</h2>
            <form id="loginForm">
              <label for="username">Username:</label>
              <input type="text" id="username" name="username" required />
  
              <label for="first_name">Email:</label>
              <input type="text" id="email" name="email" required />
  
              <label for="last_name">Password:</label>
              <input type="text" id="password" name="password" required />
              <button type="submit">Sign in</button>
            </form>
            <div class="auth">
              <h5>Don't Have an account? <span id="signup_button">Sign up</span></h5>
            </div>  
          </div>
        </div>
    </div>
  </div>

  <script src="app.js"></script>
</body>
</html>